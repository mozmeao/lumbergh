  <link href="{{ static('css/careers.css') }}" rel="stylesheet" />
{% endblock %}

{% block site_ie8 %}
  {{ super() }}
  <link href="{{ static('css/careers-ie8.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
